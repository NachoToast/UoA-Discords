{
    "name": "uoa-discords-server",
    "private": true,
    "license": "MIT",
    "type": "module",
    "author": {
        "name": "NachoToast",
        "url": "https://github.com/NachoToast"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/NachoToast/UoA-Discords",
        "directory": "server"
    },
    "scripts": {
        "build": "tsc",
        "typecheck": "tsc --noEmit",
        "lint": "eslint src --max-warnings=0",
        "test": "vitest --run",
        "coverage": "vitest run --coverage",
        "check-all": "pnpm run typecheck && pnpm run lint && pnpm run test",
        "start": "node --env-file=.env build/index.js",
        "dev": "node --import tsx --env-file=.env --watch-path=.env --watch-path=src --disable-warning=ExperimentalWarning src/index.ts"
    },
    "devDependencies": {
        "@eslint/js": "^9.2.0",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/supertest": "^6.0.2",
        "@vitest/coverage-v8": "^1.6.0",
        "eslint": "^9.2.0",
        "supertest": "^7.0.0",
        "tsx": "^4.9.4",
        "typescript": "^5.4.5",
        "typescript-eslint": "^7.8.0",
        "vitest": "^1.6.0"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "express": "^4.19.2"
    }
}
